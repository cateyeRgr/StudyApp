                    <!--tabControl style template-->
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <!--ControlTemplate modifies (Tab)Control visuals, not functionality-->
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border" BorderThickness="0,2,2,0" BorderBrush="Wheat" CornerRadius="15,15,0,0" Margin="2,0">
                                            <!--controlTemplate needs ctrlPresenter-->
                                            <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                        </Border>

                                        <!--tab color change when selected-->
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="False">
                                                <!--old value LightBlue-->
                                                <Setter TargetName="Border" Property="Background" Value="#4488FF" />
                                                <Setter Property="Foreground" Value="White"/>
                                            </Trigger>

                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="WhiteSmoke" />
                                                <Setter Property="Foreground" Value="#4488FF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
