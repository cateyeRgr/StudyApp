                            </Grid.RowDefinitions>
                            <Label Content="Fach" FontSize="16" Foreground="#4499FF" Margin="2" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>
                            <Label x:Name="querySubjectLbl" FontSize="16" Foreground="#4499FF" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" >
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>


                            <Label Content="Korrekt" FontSize="16" Foreground="#4499FF" Margin="2" Grid.Row="0" Grid.Column="2"  HorizontalAlignment="Center" VerticalAlignment="Top">
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>
                            <Label x:Name="pointsPercLbl" Content="0" FontSize="16" Foreground="#4499FF" Margin="2" Grid.Row="0" Grid.Column="3"  HorizontalAlignment="Center" VerticalAlignment="Top">
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>
                            <Label Content="Stichwort" FontSize="16" Foreground="#4499FF" Margin="2" Grid.Row="1" Grid.Column="0"  VerticalAlignment="Top">
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>
                            <Label x:Name="queryKeywordLbl"  FontSize="16" Foreground="#4499FF" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="2">
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>

                            <Label Content="Inhalt" FontSize="16" Foreground="#4499FF"  Grid.Row="2" Grid.Column="0">
                                <Label.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                </Label.Effect>
                            </Label>
                            <ScrollViewer Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">
                                <TextBlock x:Name="queryContentTB" Margin="5" TextWrapping="Wrap" FontSize="16" Foreground="#4499FF">
                                    <TextBlock.Effect>
                                        <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="3"/>
                                    </TextBlock.Effect>
                                    <TextBlock.VerticalAlignment>Top</TextBlock.VerticalAlignment>
                                </TextBlock>
                            </ScrollViewer>
                            <!--Style="{DynamicResource RoundCorner}" vs. Template="{StaticResource roundbutton}"-> functions vs. visuals -->
                            <Button x:Name="stopBtn" Click="stopBtn_Click" Content="Stop" Style="{DynamicResource RoundCorner}" Grid.Row="4" Grid.Column="0" >
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                </Button.Effect>
                            </Button>
                            <Button x:Name="nextBtn" Content="Start" Click="nextBtn_Click" Style="{DynamicResource RoundCorner}" Grid.Row="4" Grid.Column="2" >
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                </Button.Effect>
                            </Button>
                            <Button x:Name="showBtn" Content="Lösung" Click="solutionBtn_Click" Style="{DynamicResource RoundCorner}" Grid.Row="4" Grid.Column="4" >
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                </Button.Effect>
                            </Button>
                            <Label x:Name="confirmLblQuest" Content="Richtig gelöst?" Foreground="#4488FF" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="3" Grid.Column="1"></Label>
                            <RadioButton x:Name="yesRbtn" Content="j" Click="yesRbtn_Click" Foreground="#4488FF" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="45,10,00,10" Grid.Row="3" Grid.Column="1"></RadioButton>
                            <RadioButton x:Name="noRbtn" Content="n" Click="noRbtn_Click"  Foreground="#4488FF" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="20,10,50,10" Grid.Row="3" Grid.Column="1"></RadioButton>
                        </Grid>
                    </TabItem>
                    <TabItem x:Name="searchTab" Header="Alle" Opacity="1" Width="80" Margin="0,0,0,-1" >
                        <!--add round corners to grid/ add one highlighted corner-->
                        <!--<Border BorderBrush="#4488FF" BorderThickness="2" CornerRadius="00,30,00,00">-->
                        <Grid x:Name="ParentGrid" ShowGridLines="False" >


                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <!--<ColumnDefinition Width="185*"/>
                            <ColumnDefinition Width="118*"/>-->

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--<Label Content="Fach" FontSize="12" Foreground="#4488FF"  Margin="2" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect ShadowDepth="1" Direction="330" Color="Black" Opacity="0.5" BlurRadius="5"/>
                            </Label.Effect>
                        </Label>-->

                            <ComboBox x:Name="listBoxSub" Grid.Row="0" Grid.Column="0" Foreground="#4488FF" HorizontalAlignment="Center"
                          ItemsSource="{Binding }"
                          IsSynchronizedWithCurrentItem="True"
                          DisplayMemberPath="Subject_Name"
                        />
                            <!--<ListBox x:Name="listBoxSub2" Grid.Row="0" Grid.Column="1" Height="50" Foreground="#4488FF"
                          ItemsSource="{Binding /Item}"
                          IsSynchronizedWithCurrentItem="True"
                          DisplayMemberPath="Item_Name"
                        />-->

                            <ScrollViewer ScrollViewer.CanContentScroll="True"  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="1" Grid.Column="1" >
                                <DataGrid x:Name="dataGrid" Height="200" Width="300" HorizontalGridLinesBrush="Transparent" VerticalGridLinesBrush="Transparent" Foreground="#4488FF" 
                                  AlternatingRowBackground = "#b1d3ff" IsReadOnly="True" 
                                  AlternationCount = "2" AutoGenerateColumns = "False" 
                                  ItemsSource="{Binding /Item}" Grid.ColumnSpan="2" ColumnWidth="Auto" >
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Stichwort" Binding="{Binding Item_Name}"/>
                                        <DataGridTextColumn Header="Inhalt" Binding="{Binding Item_Content}"/>

                                    </DataGrid.Columns>
                                </DataGrid>
                            </ScrollViewer>
                            <Button x:Name="DeleteBtn" Click="DeleteBtn_Click_1" Content="Löschen" Style="{DynamicResource RoundCorner}" Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom">
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="2" Direction="330" Color="Black" Opacity="0.5" BlurRadius="5"/>
                                </Button.Effect>
                            </Button>
                        </Grid>
                    </TabItem>
                    <!---Chart-->
                    <TabItem x:Name="chartTab" Header="Charts" Opacity="1" Width="80">
                        <UserControl>
                            <lvc:CartesianChart Series="{Binding SeriesCollection}">
                                <lvc:CartesianChart.AxisX>
                                    <lvc:Axis Title="Datum" Labels="{Binding Labels}"></lvc:Axis>
                                </lvc:CartesianChart.AxisX>
                                <lvc:CartesianChart.AxisY>
                                    <lvc:Axis Title="Prozent" MinValue="-1" MaxValue="100"></lvc:Axis>
                                </lvc:CartesianChart.AxisY>
                            </lvc:CartesianChart>
                        </UserControl>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>
    </Window>

    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    
    